
<% if @answer.persisted? %>
$('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>');
$('.answer-<%=@answer.id %>')[0].firstChild.innerHTML = '<%= @answer.body %>';
$('.answer-<%=@answer.id %>>.files').html('<%= render partial: 'answers/files', locals: {answer: @answer} %>');
$('.answer-<%=@answer.id %>>.links').html('<%= render partial: 'shared/render_links', locals: {resource: @answer} %>');
$('#edit-answer-<%=@answer.id %>').addClass('hidden');
updateAnswers();
$('.edit-answer-link[data-answer-id="<%=@answer.id %>"]').show();

<% end %>